<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gray"
  tools:context="zone.iquest.Fragment.CalendarFragment">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    >

    <android.support.v7.widget.CardView
      android:id="@+id/card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      app:contentPadding="5dp">

      <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/titleQuest"
          android:textStyle="bold|italic"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:padding="16dp"
          android:fontFamily="sans-serif"
          android:gravity="center_horizontal|center_vertical"
          android:textColor="@color/gray"
          android:textSize="25sp"/>

        <ImageView
          android:id="@+id/yb"
          android:layout_width="match_parent"
          android:layout_height="170dp"
          android:layout_marginBottom="16dp"
          android:layout_below="@id/titleQuest"/>

        <TextView
          android:id="@+id/textQuest"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="18dp"
          android:layout_below="@id/yb"
          android:textSize="17sp"/>

        <TextView
          android:id="@+id/btnQuest"
          android:textStyle="bold|italic"
          android:layout_width="250dp"
          android:layout_height="60dp"
          android:layout_below="@id/textQuest"
          android:layout_centerHorizontal="true"
          android:background="@drawable/btn"
          android:gravity="center"
          android:text="Записаться"
          android:textColor="@android:color/darker_gray"
          android:textSize="20sp"/>

        <View
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:layout_below="@id/btnQuest"/>
      </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@id/card"/>
  </RelativeLayout>
</ScrollView>