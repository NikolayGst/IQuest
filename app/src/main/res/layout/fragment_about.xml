<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="zone.iquest.Fragment.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="16dp"
                    android:text="Мы находимся"
                    android:textColor="@color/gray"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"/>

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_below="@id/title"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/map"/>

                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:text="Наш адрес ул. Розы Люксембург 11/2\n(Частная пятиэтажная новостройка)"
                    android:textColor="@color/gray"
                    android:textSize="17sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/ourContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textAddress"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:text="Наши контакты"
                    android:textColor="@color/gray"
                    android:textSize="25sp"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ourContact"
                    android:layout_marginBottom="8dp"

                    android:gravity="center_horizontal"
                    android:text="Телефон: 098-097-09-07"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <RelativeLayout
                    android:id="@+id/rltSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tel"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginStart="32dp">

                    <TextView
                        android:id="@+id/social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:text="Мы в соцсетях:"
                        android:textColor="@color/gray"
                        android:textSize="18sp"
                        android:textStyle="italic"/>

                    <LinearLayout
                        android:id="@+id/lnrSocial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/social"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/vk"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/vk"/>

                        <ImageView
                            android:id="@+id/insta"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/insta"/>

                        <ImageView
                            android:id="@+id/fb"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/fb"/>
                    </LinearLayout>


                </RelativeLayout>

                <Button
                    android:id="@+id/btnOurRules"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/rltSocial"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn"
                    android:fontFamily="sans-serif"
                    android:text="Наши правила"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"/>
                <View
                    android:layout_below="@id/btnOurRules"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/card"/>
    </RelativeLayout>
</ScrollView>